# simple object orientation

def <square> (size) T{:class :square} size :size <<
def <circle> (dia) T{:class :circle} dia :dia <<

def method-call (obj m) m obj :class >> >> obj swap call

def area T{

    :square [:size >> square]
    :circle [:dia >> 3 * square]

    } method-call


